<!--showing post-->
<p>
	<strong>Title:</strong>
	<%= @post.title %>
</p>

<p>
	<strong>Text:</strong>
	<%= @post.text %>
</p>

<!--showing comments-->
<h2><u>Comments</u></h2>
<%= render @post.comments %>

<!--add a comment-->
<h3>Add a Comment:</h3>
<%= render "comments/form" %>

<%= link_to "go back", posts_path %>
<%= link_to 'Edit Post', edit_post_path(@post) %>
